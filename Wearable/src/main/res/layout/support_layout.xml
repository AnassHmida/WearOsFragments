<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:visibility="gone"
    android:background="@color/black">
    <android.inputmethodservice.ExtractEditText
        android:layout_width="match_parent"
        android:id="@+id/edit_text"
        android:backgroundTint="@color/flat_green"
            android:layout_marginStart="30dp"

        android:textColorHint="@color/light_grey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="@color/white"
        android:imeOptions="actionDone"
        android:fontFamily="@font/montserrat_bold"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
       >


    </android.inputmethodservice.ExtractEditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_iconfinder_phone_call_2561306"
            android:id="@+id/back"
            android:backgroundTint="@color/flat_green"
            android:tint="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:text="Change balance">
        </Button>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
android:visibility="gone"
            android:src="@drawable/ic_svg_message_icn"
            android:tint="@color/white"
            android:id="@+id/message"
            android:text="Message">
        </ImageView>
    </LinearLayout>


</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/support"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ONLINE SUPPORT"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/support"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_iconfinder_phone_call_2561306"></ImageView>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/white"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/flat_mail"></ImageView>

            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>