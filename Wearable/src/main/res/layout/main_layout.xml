<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"


        android:id="@+id/card_vie"

        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linear_balance"
        card_view:contentPadding="5dp"
        card_view:cardElevation="0dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/matte_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc_id"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="6dp"
        android:textColor="@color/white"

        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="Account ID : 58778 "/>
    </androidx.cardview.widget.CardView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/linear_balance"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"


            android:id="@+id/balance_card_view"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            card_view:contentPadding="7dp"
            card_view:cardElevation="0dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@color/flat_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </RelativeLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/balance"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:text="35.65 €"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24.3dp">

        </TextView>
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="mis à jour le 29/06/2020"
                android:textColor="@color/black"
                android:textSize="6dp">

            </TextView>
    </LinearLayout>
        </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/montserrat"
        android:text="à venir "
        android:textColor="@color/light_grey"
        android:textSize="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incoming"
        android:fontFamily="@font/montserrat"
        android:text="254,90 € "
        android:textColor="@color/flat_green"
        android:textSize="9dp"/>



</LinearLayout>

    </LinearLayout>


</RelativeLayout>

