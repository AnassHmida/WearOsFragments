<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="match_parent"
    android:layout_above="@+id/password_card"
        app:cardCornerRadius="5dp"
        android:layout_centerHorizontal="true"
        app:contentPadding="6dp"

        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/matte_black">
        <EditText
            android:layout_width="match_parent"
            android:hint="Login"
            android:id="@+id/login"
            android:textSize="10dp"
            android:textColor="@color/light_grey"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_bold"
            android:textColorHint="@color/light_grey"
            android:layout_height="wrap_content"></EditText>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        app:contentPadding="6dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="30dp"
        android:id="@+id/password_card"

        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/matte_black">
        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/light_grey"
android:hint="Password"
            android:textSize="10dp"
            android:background="@android:color/transparent"
android:id="@+id/password"
            android:textColorHint="@color/light_grey"
            android:fontFamily="@font/montserrat_bold"
            android:layout_height="wrap_content"></EditText>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        app:contentPadding="6dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/password_card"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="50dp"
        android:id="@+id/signin_card"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/flat_green">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:text="SIGN IN"
            android:gravity="center"
            android:id="@+id/signin"
            android:textSize="10dp"
            android:background="@android:color/transparent"


            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"></TextView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="6dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/flat_green"
        android:layout_below="@+id/signin_card"

        android:text="Forgot password ?"/>





</RelativeLayout>